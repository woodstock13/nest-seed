{
  "name": "nest-sample",
  "version": "0.0.1",
  "description": "nest-sample",
  "main": "dist/server/main.js",
  "author": "Davidson Canada Inc. - Alexandre Theve & Thomas Gouty",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "build": "nest build",
    "start:docker": "docker-compose up",
    "start:live": "yarn clean && yarn build && nest start --watch",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "start": "yarn clean && yarn start:dev",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --watch",
    "gcp-build-deploy-dev": "gcloud beta run deploy clean-code-api-dev --source . --region northamerica-northeast1 --platform managed --memory 521Mi --update-env-vars NODE_ENV=development,NODE_PORT=8080",
    "gcp-build-deploy-qa": "gcloud beta run deploy clean-code-api-qa --source . --region northamerica-northeast1 --platform managed --memory 521Mi --update-env-vars NODE_ENV=qa,NODE_PORT=8080",
    "gcp-build-deploy-staging": "gcloud beta run deploy clean-code-api-staging --source . --region northamerica-northeast1 --platform managed --memory 521Mi --update-env-vars NODE_ENV=staging,NODE_PORT=8080"
  },
  "dependencies": {
    "@google-cloud/storage": "^5.7.4",
    "@hapi/joi": "^17.1.1",
    "@nestjs/common": "^7.6.11",
    "@nestjs/core": "^7.6.11",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/mongoose": "^7.2.2",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-express": "^7.6.11",
    "@nestjs/platform-socket.io": "^7.6.11",
    "@nestjs/swagger": "^4.7.12",
    "@nestjs/websockets": "^7.6.11",
    "@types/google-cloud__storage": "^2.3.1",
    "@types/multer": "^1.4.5",
    "bcrypt": "^5.0.0",
    "class-transformer": "^0.3.2",
    "class-validator": "^0.13.1",
    "dotenv": "^8.2.0",
    "lodash": "^4.17.20",
    "mongoose": "5.11.14",
    "multer-google-storage": "^1.3.0",
    "nodemailer": "^6.4.17",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "swagger-ui-express": "^4.1.6"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.4",
    "@nestjs/schematics": "^7.2.7",
    "@nestjs/testing": "^7.6.11",
    "@types/express": "^4.17.11",
    "@types/hapi__joi": "^17.1.6",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.25",
    "@types/passport-jwt": "^3.0.4",
    "@types/socket.io": "^2.1.13",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "http-proxy-middleware": "^1.0.6",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.0",
    "ts-loader": "^8.0.14",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
